<div class="home panel panel-success swListPanel">
	<div class="panel-heading"><h2>ABCO India Community Impact Testimonials</h2></div>
	<div class="panel-body">
		<% @testimonials.each do |testimonial| %>
			<div class="row">
			<div class="col-lg-12">
				<p><h3><%= testimonial.author %></h3></p>
				<div class="picture">
					<div class="col-lg-4 col-lg-offset-4" >
						<% if not testimonial.imagefile.blank? %>
							<%= image_tag(testimonial.imagefile) %>
					<% end %>
					</div>
				</div>
				<div class="desc">
					<div class="col-lg-12">
						<%=raw testimonial.story %>
					</div>
				</div>

			<%end %>

			</div>
		</div>
	</div>
</div>
