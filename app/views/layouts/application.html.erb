<!DOCTYPE html>
<html>
<head>
<title>Crimsonserviceweek</title>
<%= stylesheet_link_tag    "application", media: "all" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |key, value| %>
	<div class="alert alert-<%= key %>"><p><strong><%= value %></strong></p></div>
	      <% end %>
<div class="container">
	<%= render 'layouts/header' %>
	<div class="row">
		<div class="sidebar col-lg-3">
			<%if @show_sidebar == false %>
				<%= render 'layouts/unauthsidebar' %> 
			<%else%>
				<%= render 'layouts/sidebar' %> 
			<%end%>
		</div>
		<div class="content col-lg-9">
			<%= yield %>
		</div>
	</div>
</div>
</body>
</html>
