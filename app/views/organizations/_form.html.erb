<%= form_for(@organization) do |f| %>

	<div class="actions container">
	<div class="row">
		<div class="col-lg-7">
			<% if @organization.errors.any? %>
				<div class="errorPanel panel panel-danger">
				<div class="panel-heading">	<h4><%= pluralize(@organization.errors.count, "error") %> prevented this Activity from being saved:</h4>
				</div>

				<ul class="list-group">
					<% @organization.errors.full_messages.each do |msg| %>
						<li class="list-group-item"><%= msg %></li>
				<% end %>
				</ul>
			</div>
		<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-7">
			<div class="form-group">
				<%= label_tag(:name, "Organization Name") %> 
				<%= f.text_field(:name,{:class => "form-control"}) %>
			</div>
			<div class="form-group">
				<%= label_tag(:address, "Address") %> 
				<%= f.text_field(:address, :class => "form-control") %>
			</div>
			<div class="form-group">
				<%= label_tag(:phone, "Phone Number") %> 
				<%= f.text_field(:phone, :class => "form-control") %>
			</div>
			<%if @organization.new_record? %>
				<%= f.submit 'Create Organization', :class=> "btn btn-success"%>
			<%else%>
				<%= f.submit 'Edit Organization', :class=> "btn btn-success"%> 
			<%end%>
			<%= link_to 'Back', organizations_path, :class => "btn btn-info",data: { no_turbolink: true } %>
	</div>
</div>
<% end %>
