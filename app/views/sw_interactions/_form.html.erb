<%= form_for(@sw_interaction) do |f| %>

	<div class="actions container">
	<div class="row">
		<div class="col-lg-7">
			<% if @sw_interaction.errors.any? %>
				<div class="errorPanel panel panel-danger">
				<div class="panel-heading">	<h4><%= pluralize(@sw_interaction.errors.count, "error") %> prevented this Activity from being saved:</h4>
				</div>

				<ul class="list-group">
					<% @sw_interaction.errors.full_messages.each do |msg| %>
						<li class="list-group-item"><%= msg %></li>
				<% end %>
				</ul>
			</div>
		<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-7">
			<div class="form-group">
				<%= label_tag(:organization, "Activity") %>
				<%=  text_field_tag(:organization, @sw_interaction.organization, :class=>'form-control') %>
			</div>
			<div class="form-group">
				<%= label_tag(:category, "Hands-on/Pro Bono") %> 
				<%= select_tag(:category,options_for_select([ "Hands-on", "Pro-bono" ], @sw_interaction.category ) , :class => "form-control") %>
			</div>
			<div class="form-group">
				<%= label_tag(:volunteerHours, "Volunteer Hours") %> 
				<%= text_field_tag(:volunteerHours,@sw_interaction.volunteerHours, :class => "form-control") %>
			</div>
			<div class="form-group">
				<%= label_tag(:activitydate, "Date") %> 
				<%= text_field_tag(:activitydate,@sw_interaction.activitydate.nil? ? nil : @sw_interaction.activitydate.strftime('%d/%m/%Y'), :class => "form-control") %>
			</div>
			<%if @sw_interaction.new_record? %>
				<%= f.submit 'Log New Activity', :class=> "btn btn-success"%>
			<%else%>
				<%= f.submit 'Edit Activity', :class=> "btn btn-success"%> 
			<%end%>
			<%= link_to 'Back', sw_interactions_path, :class => "btn btn-info",data: { no_turbolink: true } %>
	</div>
</div>
<% end %>
