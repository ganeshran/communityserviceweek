<div class="panel panel-success swListPanel">
	<div class="panel-heading">
		<h2>All Registered Users</h2> 
	</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
	<td> <%= user.name %> </td>
	<td> <%= user.email%> </td>
	<td> <%= link_to 'Show', user, :class => "btn btn-success", data: { no_turbolink: true } %> </td>
	<td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-warning", data: { no_turbolink: true } %></td>
	<td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
